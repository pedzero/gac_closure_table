generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id @default(uuid()) @db.Uuid
  name        String  
  email       String        @unique
  userGroups  UserGroup[]

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@map("users")
}

model Group {
  id          String        @id @default(uuid()) @db.Uuid
  name        String  
  parentId    String?       @db.Uuid

  parent      Group?        @relation("GroupParent", fields: [parentId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  children    Group[]       @relation("GroupParent")

  userGroups  UserGroup[]
  ancestors   GroupClosure[]  @relation("DescendantRef")
  descendants GroupClosure[]  @relation("AncestorRef")

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@map("groups")
  @@index([parentId])
}

model UserGroup {
  userId      String        @db.Uuid
  groupId     String        @db.Uuid

  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  group       Group         @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@id([userId, groupId])
  @@map("user_groups")
  @@index([groupId])
}

model GroupClosure {
  ancestorId    String      @db.Uuid
  descendantId  String      @db.Uuid
  depth         Int

  ancestor      Group       @relation("AncestorRef", fields: [ancestorId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  descendant    Group       @relation("DescendantRef", fields: [descendantId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@id([ancestorId, descendantId])
  @@map("group_closure")
  @@index([descendantId])
  @@index([depth])
}
